<ContentDialog x:ConnectionId='1' x:Name="ContentDialog"
    x:Class="bm_shop.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Настройки"
    PrimaryButtonText="Сохранить"
    SecondaryButtonText="Отмена">

    <Grid Padding="0,0,0,0">
        <TextBox x:ConnectionId='2' x:Name="Login" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" PlaceholderText="Логин:" VerticalAlignment="Top" CornerRadius="8,8,8,8" Width="300"/>
        <TextBox x:ConnectionId='3' x:Name="Password" HorizontalAlignment="Left" Margin="0,35,0,0" TextWrapping="Wrap" PlaceholderText="Пароль:" VerticalAlignment="Top" CornerRadius="8,8,8,8" Width="300"/>
        <TextBox x:ConnectionId='4' x:Name="Surname" HorizontalAlignment="Left" Margin="0,70,0,0" TextWrapping="Wrap" PlaceholderText="Фамилия:" VerticalAlignment="Top" CornerRadius="8,8,8,8" Width="300"/>
        <TextBox x:ConnectionId='5' x:Name="Name" HorizontalAlignment="Left" Margin="0,105,0,0" TextWrapping="Wrap" PlaceholderText="Имя:" VerticalAlignment="Top" CornerRadius="8,8,8,8" Width="300"/>
        <TextBox x:ConnectionId='6' x:Name="Patronymic" HorizontalAlignment="Left" Margin="0,140,0,0" TextWrapping="Wrap" PlaceholderText="Отчество:" VerticalAlignment="Top" CornerRadius="8,8,8,8" Width="300"/>
        <TextBlock x:ConnectionId='7' HorizontalAlignment="Left" Margin="95,175,0,0" TextWrapping="Wrap" Text="Выйти из учётной записи" VerticalAlignment="Top" FontSize="9"                          />
    </Grid>
</ContentDialog>

